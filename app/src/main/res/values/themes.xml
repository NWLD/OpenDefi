<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.DefiTools" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="background">@color/base_blue</item>
        <item name="android:windowBackground">@color/base_blue</item>
        <item name="android:statusBarColor">@color/none</item>
        <item name="android:navigationBarColor">@color/none</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.DefiTools">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowExitAnimation">@anim/router_null_0</item>
        <item name="android:windowEnterAnimation">@anim/router_null_0</item>
    </style>
</resources>