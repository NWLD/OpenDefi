<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_list_item"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/item_pair_info_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_pair_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/base_price_normal"
                    android:textSize="@dimen/text" />

                <TextView
                    android:id="@+id/item_pair_add_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/base_price_up"
                    android:textSize="@dimen/text" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_pair_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/base_price_normal"
                android:textSize="@dimen/des" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_token0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item_token0_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_token0_symbol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/base_price_normal"
                        android:textSize="@dimen/text" />

                    <TextView
                        android:id="@+id/item_token0_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textColor="@color/base_price_normal"
                        android:textSize="@dimen/tip" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_token0_init_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:singleLine="true"
                    android:textColor="@color/base_blue"
                    android:textSize="@dimen/des" />

                <TextView
                    android:id="@+id/item_token0_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/base_price_normal"
                    android:textSize="@dimen/text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_token0_balance_diff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/des" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/item_token0_approve"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/base_button"
                        android:gravity="center"
                        android:text="@string/approve"
                        android:textColor="@color/base_button_title"
                        android:textSize="@dimen/text" />

                    <TextView
                        android:id="@+id/item_token0_swap"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/base_button"
                        android:gravity="center"
                        android:text="@string/swap"
                        android:textColor="@color/base_button_title"
                        android:textSize="@dimen/text" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/base_line" />

            <LinearLayout
                android:id="@+id/item_token1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item_token1_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_token1_symbol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/base_price_normal"
                        android:textSize="@dimen/text" />

                    <TextView
                        android:id="@+id/item_token1_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textColor="@color/base_price_normal"
                        android:textSize="@dimen/tip" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_token1_init_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:singleLine="true"
                    android:textColor="@color/base_blue"
                    android:textSize="@dimen/des" />

                <TextView
                    android:id="@+id/item_token1_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/base_price_normal"
                    android:textSize="@dimen/text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_token1_balance_diff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/des" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_token1_approve"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/base_button"
                    android:gravity="center"
                    android:text="@string/approve"
                    android:textColor="@color/base_button_title"
                    android:textSize="@dimen/text" />

                <TextView
                    android:id="@+id/item_token1_swap"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/base_button"
                    android:gravity="center"
                    android:text="@string/swap"
                    android:textColor="@color/base_button_title"
                    android:textSize="@dimen/text" />

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/item_pair_price_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_token0_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/base_blue"
                    android:textSize="@dimen/text" />

                <TextView
                    android:id="@+id/item_token1_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/base_blue"
                    android:textSize="@dimen/text" />

            </LinearLayout>

        <TextView
            android:id="@+id/item_pair_add_watch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/base_button"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/add_to_watch"
            android:textColor="@color/base_button_title"
            android:textSize="@dimen/text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px" />

    </LinearLayout>


</LinearLayout>