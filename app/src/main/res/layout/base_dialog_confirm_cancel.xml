<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_dialog_confirm_cancel_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/base_dialog_confirm_cancel_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_dialog_center_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/base_dialog_confirm_cancel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/base_button_title"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/base_dialog_confirm_cancel_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/des"
            android:textSize="@dimen/des"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="25dp"
            android:background="@color/base_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/base_dialog_confirm_cancel_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/cancel_button"
                android:textColor="@color/des"
                android:textSize="@dimen/title" />

            <View
                android:layout_width="@dimen/base_line_height"
                android:layout_height="match_parent"
                android:background="@color/base_line" />

            <TextView
                android:id="@+id/base_dialog_confirm_cancel_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/confirm_button"
                android:textColor="@color/base_button_title"
                android:textSize="@dimen/title"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
